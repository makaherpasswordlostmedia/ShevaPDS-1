<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#0A0A0A">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="NAME" android:textColor="#444444"
        android:textSize="8sp" android:fontFamily="monospace"
        android:layout_marginBottom="2dp"/>
    <EditText android:id="@+id/et_name"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="my_game" android:inputType="text"
        android:textColor="#00FF41" android:textColorHint="#222222"
        android:background="#050505"
        android:textSize="12sp" android:fontFamily="monospace"
        android:padding="6dp" android:layout_marginBottom="8dp"
        android:singleLine="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="DESCRIPTION (optional)" android:textColor="#444444"
        android:textSize="8sp" android:fontFamily="monospace"
        android:layout_marginBottom="2dp"/>
    <EditText android:id="@+id/et_desc"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="What does it do?" android:inputType="text"
        android:textColor="#FFAA00" android:textColorHint="#222222"
        android:background="#050500"
        android:textSize="11sp" android:fontFamily="monospace"
        android:padding="6dp" android:layout_marginBottom="8dp"
        android:singleLine="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="SOURCE (Imlac PDS-1 Assembly)" android:textColor="#444444"
        android:textSize="8sp" android:fontFamily="monospace"
        android:layout_marginBottom="2dp"/>
    <EditText android:id="@+id/et_source"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:scrollbars="vertical"
        android:textColor="#00CC33"
        android:textColorHint="#1A1A1A"
        android:background="#030805"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:hint="; Write PDS-1 assembly here&#10;        ORG 0050&#10;START:  NOP&#10;        JMP START"/>

    <!-- Quick instruction reference -->
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Instructions: LAW JMP DAC XAM ISP ADD AND LDA JMS IOR RAL RAR IOT OPR&#10;Keyboard: W=up S=down A=left D=right SPACE=fire F=alt"
        android:textColor="#1A2A1A"
        android:textSize="7sp" android:fontFamily="monospace"
        android:layout_marginTop="6dp"/>

</LinearLayout>
